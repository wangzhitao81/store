@model CRModel.Models.EditPassModel
@{
    ViewBag.Title = "EditPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron-header">
    <span style="font-size:30px; color: #34A387">@Resources.Resources.EditPassword</span>
</div>
<div class="container body-content">
    @using (Html.BeginForm("EditPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "passwordform" }))
    {
        <div class="form-group">
            <label for="CurrentPass" class="col-sm-2 control-label">@Resources.Resources.CurrentPassword</label>
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.CurrentPass, new { @class = "form-control", placeholder = Resources.Resources.CurrentPassword })
                @Html.ValidationMessageFor(m => m.CurrentPass, Resources.Resources.InputCurrentPassword)
            </div>
        </div>
        <div class="form-group">
            <label for="NewPass" class="col-sm-2 control-label">@Resources.Resources.NewPassword</label>
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.NewPass, new { @class = "form-control", placeholder = Resources.Resources.NewPassword })
                @Html.ValidationMessageFor(m => m.NewPass, Resources.Resources.InputNewPassword)
            </div>
        </div>
        <div class="form-group">
            <label for="ConfirmPass" class="col-sm-2 control-label">@Resources.Resources.ConfirmNewPassword</label>
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.ConfirmPass, new { @class = "form-control", placeholder = Resources.Resources.ConfirmNewPassword })
                @Html.ValidationMessageFor(m => m.ConfirmPass, Resources.Resources.ConfirmNewPassword)
                <span style="display:none" class="field-validation-error" id="confirm">@Resources.Resources.PasswordNotMatch</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-1">
                <input type="button" onclick="Submitpasswordform();" class="btn btn-default" value='@Resources.Resources.Submit' />
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    function Submitpasswordform() {
        if ($("#passwordform").valid()) {
            if ($("#NewPass").val() != $("#ConfirmPass").val()) {
                $("#confirm").show();
            }
            else {
                $("#confirm").hide();
                $("#passwordform")[0].submit();
            }
        }
    }
</script>