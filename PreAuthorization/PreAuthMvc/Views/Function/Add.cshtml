@model PreAuthMvc.Models.FunctionViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_ContentLayout.cshtml";
}
<div class="right_content">
    <input type="hidden" id="sessionUUID" name="sessionUUID" value='@ViewData["sessionUUID"]'>
    @using (Html.BeginForm())
    {
        <div class="list_header">
            功能管理
            <div class="top_m_l"></div>
            <div class="top_m_r"></div>
        </div>
        <input type="hidden" value=@ViewData["usrId"] name="usrId" id="usrId">
        <input type="hidden" value=@ViewData["adminUserName"] name="adminUserName" id="adminUserName">
        <table cellspacing="0" cellpadding="0" width="100%" border="0" class="t-form">
            <tbody>
                <tr>
                    <td class="lbl">@Html.LabelFor(model => model.FunctionCode) </td>
                    <td>
                        <input type="hidden" value=@Html.ValueFor(model => model.Id) name="recordId" id="recordId">
                        <input type="text" maxlength="32" autocomplete="off" class="txt" value='@Html.ValueFor(model => model.FunctionCode)' name="FunctionCode" id="FunctionCode">
                        <span class="red_mark">*</span><span id="FunctionCodeTip"></span>
                    </td>
                </tr>
                <tr>
                    <td class="lbl">@Html.LabelFor(model => model.FunctionName) </td>
                    <td>
                        <input type="text" maxlength="32" autocomplete="off" class="txt" value='@Html.ValueFor(model => model.FunctionName)' name="FunctionName" id="FunctionName">
                        <span class="red_mark">*</span><span id="FunctionNameTip"></span>
                    </td>
                </tr>
                <tr>
                    <td class="lbl">@Html.LabelFor(model => model.FunctionUrl) </td>
                    <td>
                        <input type="text" maxlength="32" autocomplete="off" class="txt" value='@Html.ValueFor(model => model.FunctionUrl)' name="FunctionUrl" id="FunctionUrl">
                        <span class="red_mark">*</span><span id="FunctionUrlTip"></span>
                    </td>
                </tr>
            </tbody>

        </table>
        <div class="btn_line">
            <input type="button" id="okBtn" value="确定" class="btn_blue" />
            <input type="button" id="cancelBtn" value="取消" class="btn_gray" />
        </div>
    }

</div>
<script type="text/javascript">
    upms.history.go("cancelBtn");// 取消按钮
    upms.handlebtn.submit({// 确定batch
        btnid: "okBtn",
        url: '@Url.Action("SubmitAdd", "Function")',
        params: [
                { name: "recordId", targetid: "recordId", type: "text" },
                { name: "FunctionCode", targetid: "FunctionCode", type: "text" },
                { name: "FunctionName", targetid: "FunctionName", type: "text" },
                { name: "FunctionUrl", targetid: "FunctionUrl", type: "text" }
                //{ name: "userAuth", targetname: "userAuth", type: "checkbox" }
        ],
        validate: {
            model: "batch",
            params: [
                {
                    targetid: "FunctionCode", type: "text", infoid: "FunctionCodeTip", checkarray: [{ falsetip: "功能编码不能为空!", oncheck: upms.checkUtils.isNotEmptyStr }]
                },
                { targetid: "FunctionName", type: "text", infoid: "FunctionNameTip", falsetip: "功能名称不能为空!", oncheck: upms.checkUtils.isNotEmptyStr },
                { targetid: "FunctionUrl", type: "text", infoid: "FunctionUrlTip", falsetip: "功能Url不能为空!", oncheck: upms.checkUtils.isNotEmptyStr }
            ]
        }
    });
</script>

