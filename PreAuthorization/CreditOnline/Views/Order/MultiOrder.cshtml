@{
    ViewBag.Title = "MultiOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron-header">
    <span style="font-size:30px; color: #34A387">@Resources.Resources.MultiOrder</span>
</div>
<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <div class="btn btn-step"><span style="color:white;">@Resources.Resources.Step1.</span></div>
            <div style="padding-left: 30px;">
                <h5>
                    @Resources.Resources.DownloadTemplateFirst
                    <a href='@Url.Action("DownloadTemplate", "Download")' type="button" style="background-color: #4D82A7;color:white;" class="btn btn-sm">@Resources.Resources.DownloadTemplate</a>
                </h5>
            </div>
        </div>
        <div class="col-md-12">
            <div class="btn btn-step"><span style="color:white;">@Resources.Resources.Step2.</span></div>
            <div style="padding-left:30px;">
                <h5>
                    @Resources.Resources.DownloadTemplateSecond
                </h5>
            </div>
        </div>
        <div class="col-md-12">
            <div class="btn btn-step"><span style="color:white;">@Resources.Resources.Step3.</span></div>
            <div style="padding-left:30px;">
                <h5>
                    @Resources.Resources.DownloadTemplateThird
                </h5>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <div class="input-group">
                @using (Html.BeginForm("MultiOrder", "Order", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data", id = "multiorderform" }))
                {
                    <input type="file" class="form-control" style="float:left;" id="fileup" name="fileup">
                    <br />
                    <input type="submit" class="btn btn-primary" style="margin-top:10px;" value='@Resources.Resources.Deal' />
                }
            </div>
        </div>
    </div>
</div>